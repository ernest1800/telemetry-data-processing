html {
    margin:0;
    padding:0;
    border:0;
}

body {
    color:black;
    background-color: #545454;
    font-family:arial, sans-serif;
    font-size:12pt;
}

/***********************************************/
/* link styles                                 */
/***********************************************/
a:link {
    color:#F4F4F4;
    background-color:transparent;
}
a:hover {
    color:#FF00FF;
    background-color:transparent;
}
a:visited {
    color:#FE482A;
    background-color:transparent;
}

/***********************************************/
/* division styles                             */
/***********************************************/
#banner-div {
    text-align:center;
}
#page-content-div {

}
#clear-div {
    clear:both;
}
#left-div {
    float:left;
    width:20%;
}
#right-div {
    float:right;
    width:80%;
}

/***********************************************/
/* paragraph styles                            */
/***********************************************/
.cent {
    text-align:center;
}
.heads {
    font-family:arial,sans-serif;
    font-size:1.2em;
    text-align:left;
}
.curr_page {
    color:#F4F4F4;
    font-weight:bolder;
    text-shadow:black;
    border:1px solid #F4F4F4;
}
.result {
    color:inherit;
    font-weight:bold;
    text-shadow:black;
}

/***********************************************/
/* horizontal line styles                      */
/***********************************************/
hr {
    width:100%;
    height:1px;
}
.deepline {
    width:100%;
    height:10px;
    color:#0000FE;
    background-color:#0000FF;
}
