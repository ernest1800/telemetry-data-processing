{% extends 'banner.html.twig' %}
{% block content %}
    <h2>{{ page_heading_2 }}</h2>
    <p>Company stock symbol was <b>{{ company_symbol }}</b></p>
    <h3>Stock Data</h3>
    <table border="1">
        <tbody>
        <tr><th>Date</th><th>Time</th><th>Stock Value</th></tr>
        {% for stock_data in company_data_set %}
            <tr><td>{{ stock_data.date }}</td><td>{{ stock_data.time }}</td><td>{{ stock_data.value }}</td></tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <p class="curr_page"><a href="{{ landing_page }}/{{ route }}">Another Company</a></p>
{% endblock %}